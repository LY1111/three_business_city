<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteTwoColor"
    android:orientation="vertical"
    tools:context="com.tuoyi.threebusinesscity.activity.OrderDetailsActivity">

    <RelativeLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common50dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单详情"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/text_size_18sp" />

        <ImageView
            android:id="@+id/leftBack"
            android:layout_width="@dimen/common40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:padding="@dimen/common10dp"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_below="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whiteColor"
            android:layout_marginTop="@dimen/common8dp"
            android:orientation="vertical">

            <!--<TextView
                style="@style/gray_text12"
                android:padding="@dimen/common10dp"
                android:text="待评价"
                android:textColor="#663311" />-->

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/common1dp"
                android:layout_marginLeft="@dimen/common2dp"
                android:layout_marginRight="@dimen/common2dp"
                android:background="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common10dp"
                    android:src="@mipmap/ic_adress"
                    android:tint="@color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/common10dp"
                    android:paddingLeft="@dimen/common10dp"
                    android:paddingTop="@dimen/common10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/common10dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/black_text14"
                            android:text="白浅" />

                        <TextView
                            style="@style/black_text14"
                            android:layout_marginLeft="@dimen/common10dp"
                            android:inputType="phone"
                            android:maxLength="11"
                            android:maxLines="1"
                            android:text="13028909099" />

                    </LinearLayout>

                    <TextView
                        style="@style/black_text14"
                        android:text="浙江省杭州市上城区解放路1号101" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common8dp"
            android:background="@color/whiteColor"
            android:orientation="horizontal"
            android:padding="@dimen/common10dp">

            <ImageView
                android:layout_width="@dimen/common100dp"
                android:layout_height="@dimen/common80dp"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/black_text16"
                        android:text="￥ 199"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="end"
                        style="@style/gray_text12"
                        android:textSize="@dimen/text_size_16sp"
                        android:text="×1"/>
                </LinearLayout>

                <TextView
                    style="@style/black_text14"
                    android:layout_marginTop="@dimen/common10dp"
                    android:text="2017春季新款美鞋"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common15dp"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/gray_text12"
                        android:text="颜色："/>
                    <TextView
                        style="@style/gray_text12"
                        android:text="白色"/>

                    <TextView
                        style="@style/gray_text12"
                        android:text="尺码:"
                        android:layout_marginLeft="@dimen/common30dp"/>
                    <TextView
                        style="@style/gray_text12"
                        android:text="36"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View style="@style/gray_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="@dimen/common40dp"
            android:background="@color/whiteColor"
            android:paddingLeft="@dimen/common10dp"
            android:orientation="horizontal">

            <TextView
                style="@style/black_text14"
                android:text="实付金额：" />

            <TextView
                style="@style/black_text14"
                android:text="￥199"
                android:layout_width="@dimen/common0dp"
                android:layout_weight="1"
                android:textColor="@color/colorAccent" />

            <Button
                android:layout_width="@dimen/common80dp"
                android:layout_height="@dimen/common30dp"
                android:text="申请退货"
                android:background="@drawable/bg_gray_white_btn" />

        </LinearLayout>

        <View
            style="@style/gray_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="@dimen/common40dp"
            android:background="@color/whiteColor"
            android:paddingLeft="@dimen/common10dp"
            android:orientation="horizontal">

            <TextView
                style="@style/black_text14"
                android:text="支付方式：" />

            <TextView
                style="@style/black_text14"
                android:text="支付宝"
                android:layout_width="@dimen/common0dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common8dp"
            android:background="@color/whiteColor"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/common8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="@dimen/common5dp"
                    style="@style/gray_text12"
                    android:text="订单编号："/>

                <TextView
                    style="@style/gray_text12"
                    android:text="64654654211212"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/common8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="@dimen/common5dp"
                    style="@style/gray_text12"
                    android:text="下单时间："/>

                <TextView
                    style="@style/gray_text12"
                    android:text="2018-03-14 23:11:50"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/common8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="@dimen/common5dp"
                    style="@style/gray_text12"
                    android:text="支付时间："/>

                <TextView
                    style="@style/gray_text12"
                    android:text="2018-03-14 23:12:03"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/common20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/common10dp"
            android:background="@color/whiteColor">
            <TextView
                style="@style/black_text14"
                android:text="总计："/>
            <TextView
                style="@style/black_text16"
                android:textSize="@dimen/text_size_18sp"
                android:textColor="@color/colorPrimary"
                android:text="￥199" />

        </LinearLayout>

        <TextView
            android:layout_width="@dimen/common0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="查看物流"
            android:gravity="center"
            android:textColor="@color/whiteColor"
            android:layout_height="match_parent" />
        <View
            android:layout_width="@dimen/common1dp"
            android:layout_height="match_parent"
            android:background="@color/whiteColor"/>

        <TextView
            android:layout_width="@dimen/common0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="确认收货"
            android:gravity="center"
            android:textColor="@color/whiteColor"
            android:layout_height="match_parent" />

    </LinearLayout>
</RelativeLayout>