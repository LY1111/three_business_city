<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor"
    android:clipChildren="false"
    android:orientation="vertical"
    tools:context="com.tuoyi.threebusinesscity.activity.MainActivity">

    <FrameLayout
        android:id="@+id/main_fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!--只要没有中间凸起这个框架贼好用
    <com.hjm.bottomtabbar.BottomTabBar
        android:id="@+id/main_bottom_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tab_divider_background="#FF0000"
        app:tab_divider_height="5dp"
        app:tab_font_size="8sp"
        app:tab_img_font_padding="0dp"
        app:tab_img_height="30dp"
        app:tab_img_width="30dp"
        app:tab_isshow_divider="true"
        android:layout_alignParentBottom="true"
        app:tab_padding_bottom="5dp"
        app:tab_padding_top="8dp"
        app:tab_selected_color="#000000"
        app:tab_unselected_color="@color/colorPrimary" />-->

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.33dp"
        android:background="@color/grayColor" />

    <RadioGroup
        android:id="@+id/main_rg"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/main_rb_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="0dp"
            android:drawableTop="@mipmap/shouye_a"
            android:gravity="center"
            android:padding="4dp"
            android:text="首页"
            android:textColor="@color/darkColor" />

        <RadioButton
            android:id="@+id/main_rb_shop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="0dp"
            android:drawableTop="@mipmap/shangcheng_a"
            android:gravity="center"
            android:padding="4dp"
            android:text="三商商城"
            android:textColor="@color/darkColor" />

        <LinearLayout
            android:id="@+id/main_rb_sao"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="bottom|center"
            android:orientation="vertical">


            <LinearLayout
                android:background="@drawable/shape_main_btn_bg"
                android:layout_width="wrap_content"
                android:padding="@dimen/common10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:elevation="@dimen/common6dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/main_rb_sao_img"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/gouwuche" />
            </LinearLayout>


            <TextView
                android:id="@+id/main_rb_sao_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/common1dp"
                android:gravity="center"
                android:text="扫一扫"
                android:textColor="@color/darkColor" />
        </LinearLayout>

        <RadioButton
            android:id="@+id/main_rb_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="0dp"
            android:drawableTop="@mipmap/email_a"
            android:gravity="center"
            android:padding="4dp"
            android:text="消息通知"
            android:textColor="@color/darkColor" />

        <RadioButton
            android:id="@+id/main_rb_my"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawablePadding="0dp"
            android:drawableTop="@mipmap/geren_a"
            android:gravity="center"
            android:padding="4dp"
            android:text="个人中心"
            android:textColor="@color/darkColor" />
    </RadioGroup>

</LinearLayout>
