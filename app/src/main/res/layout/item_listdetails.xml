<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/common8dp"
               android:background="@color/whiteColor"
               android:orientation="horizontal"
               android:padding="@dimen/common10dp">

               <ImageView
                   android:id="@+id/img_title"
                   android:layout_width="@dimen/common100dp"
                   android:layout_height="@dimen/common80dp"
                   android:src="@mipmap/ic_launcher" />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">

                       <TextView
                           android:id="@+id/tv_price"
                           style="@style/black_text16"
                           android:text="￥ 199" />

                       <TextView
                           android:id="@+id/tv_integral"
                           style="@style/black_text16"
                           android:layout_marginLeft="@dimen/common20dp"
                           android:text="积分：5000"/>

                       <TextView
                           android:id="@+id/tv_num"
                           style="@style/gray_text12"
                           android:layout_width="match_parent"
                           android:gravity="end"
                           android:text="×1"
                           android:textSize="@dimen/text_size_16sp" />
                   </LinearLayout>

                   <TextView
                       android:id="@+id/tv_name"
                       style="@style/black_text14"
                       android:layout_marginTop="@dimen/common10dp"
                       android:text="2017春季新款美鞋" />

                  <!-- <com.zhy.view.flowlayout.TagFlowLayout
                       android:id="@+id/details_flowlayout"
                       zhy:max_select="1"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       />-->
                   <LinearLayout
                       android:id="@+id/linearLayout_qqq"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">

                   </LinearLayout>

               </LinearLayout>
           </LinearLayout>

</LinearLayout>