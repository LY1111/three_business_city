<?xml version="1.0" encoding="utf-8"?>
<com.tuoyi.threebusinesscity.widget.MyRecyclerViewItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:scrollbars="none"
    android:id="@+id/recycler_item">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/content_layout"
            android:orientation="vertical"
            android:layout_width="480dp"
            android:layout_height="wrap_content">

            <!--内容区域放置布局-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_content"
                    android:layout_width="@dimen/common70dp"
                    android:layout_height="@dimen/common70dp"
                    android:layout_margin="@dimen/common10dp"
                    android:src="@mipmap/moren"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common10dp"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/img_content">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dahjdaldklajdlajsdl"
                        android:textSize="@dimen/text_size_18sp"
                        android:textColor="@color/light_black"/>

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dahjdaldklajdlajsdl"
                        android:textSize="@dimen/text_size_18sp"
                        android:textColor="@color/red"/>
                    <TextView
                        android:id="@+id/tv_dou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="550"
                        android:textSize="@dimen/text_size_15sp"
                        android:drawableLeft="@mipmap/douzi"
                        android:textColor="@color/colorAccent" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/img_edit"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="135dp"
                    android:padding="@dimen/common5dp"
                    android:src="@mipmap/bianji" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:background="@color/rect"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--自定义侧边菜单布局-->
            <LinearLayout
                android:id="@+id/click"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/common40dp"
                    android:layout_height="@dimen/common40dp"
                    android:src="@mipmap/delete"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</com.tuoyi.threebusinesscity.widget.MyRecyclerViewItem>