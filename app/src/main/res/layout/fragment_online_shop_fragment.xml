<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/mLocation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="6dp"
            android:paddingTop="6dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/ic_adress"
                android:tint="@color/whiteColor" />

            <TextView
                android:id="@+id/mLocation_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLength="10"
                android:maxLines="1"
                android:text="点击定位"
                android:textColor="@color/whiteColor" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:id="@+id/mSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/mainfragment_search_et_bg"
                android:hint="输入店铺名称搜索"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:paddingBottom="1dp"
                android:paddingLeft="32dp" />

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="6dp"
                android:src="@mipmap/ic_sousuo" />
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/mBanner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common150dp"
                app:image_scale_type="fit_xy" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteColor"
                android:orientation="vertical"
                android:paddingBottom="@dimen/common10dp"
                android:paddingTop="@dimen/common10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mSort1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/baby"
                        android:gravity="center_horizontal"
                        android:text="母婴用品" />

                    <TextView
                        android:id="@+id/mSort2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/electric"
                        android:gravity="center_horizontal"
                        android:text="家用电器" />

                    <TextView
                        android:id="@+id/mSort3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/beauty"
                        android:gravity="center_horizontal"
                        android:text="美妆护理" />

                    <TextView
                        android:id="@+id/mSort4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/food"
                        android:gravity="center_horizontal"
                        android:text="食品特产" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mSort5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/phone"
                        android:gravity="center_horizontal"
                        android:text="手机数码" />

                    <TextView
                        android:id="@+id/mSort6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/book"
                        android:gravity="center_horizontal"
                        android:text="图书音像" />

                    <TextView
                        android:id="@+id/mSort7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/jewelry"
                        android:gravity="center_horizontal"
                        android:text="珠宝首饰" />

                    <TextView
                        android:id="@+id/mSort8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/clothes"
                        android:gravity="center_horizontal"
                        android:text="服装服饰" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common5dp"
                android:background="@color/whiteColor"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/common15dp"
                    android:text="精选商品"
                    android:textColor="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common150dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/mBigPic"
                        android:layout_width="270dp"
                        android:layout_height="@dimen/common150dp"
                        android:layout_marginLeft="@dimen/common15dp"
                        android:layout_marginBottom="@dimen/common5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/text_pic" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/mSmall1"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginLeft="@dimen/common5dp"
                            android:layout_marginRight="@dimen/common15dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:src="@drawable/text_pic" />

                        <ImageView
                            android:id="@+id/mSmall2"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginLeft="@dimen/common5dp"
                            android:layout_marginRight="@dimen/common15dp"
                            android:layout_marginTop="@dimen/common5dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:src="@drawable/text_pic" />

                        <ImageView
                            android:id="@+id/mSmall3"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginLeft="@dimen/common5dp"
                            android:layout_marginRight="@dimen/common15dp"
                            android:layout_marginTop="@dimen/common5dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:src="@drawable/text_pic" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common5dp"
                android:background="@color/whiteColor"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/common15dp"
                    android:text="精选商品"
                    android:textColor="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/common15dp"
                    android:paddingRight="@dimen/common15dp"
                    android:paddingTop="@dimen/common15dp"
                    android:paddingBottom="@dimen/common15dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/mHandPick1"
                        android:layout_width="@dimen/common0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/mHandPick1_pic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_launcher" />

                        <TextView
                            android:id="@+id/mHandPick1_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="360手机 N6 Life 全网通..."
                            android:textSize="@dimen/text_size_10sp" />

                        <TextView
                            android:id="@+id/mHandPick1_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_main_btn_bg"
                            android:paddingTop="@dimen/common2dp"
                            android:paddingBottom="@dimen/common2dp"
                            android:paddingLeft="@dimen/common8dp"
                            android:paddingRight="@dimen/common8dp"
                            android:text="积分：199"
                            android:textColor="@color/whiteColor"
                            android:textSize="@dimen/text_size_12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mHandPick2"
                        android:layout_width="@dimen/common0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/mHandPick2_pic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_launcher" />

                        <TextView
                            android:id="@+id/mHandPick2_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="360手机 N6 Life 全网通..."
                            android:textSize="@dimen/text_size_10sp" />

                        <TextView
                            android:id="@+id/mHandPick2_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_main_btn_bg"
                            android:paddingTop="@dimen/common2dp"
                            android:paddingBottom="@dimen/common2dp"
                            android:paddingLeft="@dimen/common8dp"
                            android:paddingRight="@dimen/common8dp"
                            android:text="积分：199"
                            android:textColor="@color/whiteColor"
                            android:textSize="@dimen/text_size_12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mHandPick3"
                        android:layout_width="@dimen/common0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/mHandPick3_pic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_launcher" />

                        <TextView
                            android:id="@+id/mHandPick3_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="360手机 N6 Life 全网通..."
                            android:textSize="@dimen/text_size_10sp" />

                        <TextView
                            android:id="@+id/mHandPick3_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_main_btn_bg"
                            android:paddingTop="@dimen/common2dp"
                            android:paddingBottom="@dimen/common2dp"
                            android:paddingLeft="@dimen/common8dp"
                            android:paddingRight="@dimen/common8dp"
                            android:text="积分：199"
                            android:textColor="@color/whiteColor"
                            android:textSize="@dimen/text_size_12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mHandPick4"
                        android:layout_width="@dimen/common0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/mHandPick4_pic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_launcher" />

                        <TextView
                            android:id="@+id/mHandPick4_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="360手机 N6 Life 全网通..."
                            android:textSize="@dimen/text_size_10sp" />

                        <TextView
                            android:id="@+id/mHandPick4_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_main_btn_bg"
                            android:paddingTop="@dimen/common2dp"
                            android:paddingBottom="@dimen/common2dp"
                            android:paddingLeft="@dimen/common8dp"
                            android:paddingRight="@dimen/common8dp"
                            android:text="积分：199"
                            android:textColor="@color/whiteColor"
                            android:textSize="@dimen/text_size_12sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="45dp"-->
                <!--android:gravity="center_vertical"-->
                <!--android:paddingLeft="@dimen/common15dp"-->
                <!--android:text="最新商品"-->
                <!--android:textColor="@color/colorPrimary" />-->

            <android.support.v7.widget.RecyclerView
                android:id="@+id/mRecycler"
                android:background="@color/whiteColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>