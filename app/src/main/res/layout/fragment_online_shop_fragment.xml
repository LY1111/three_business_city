    <android.support.v7.widget.RecyclerView
        android:id="@+id/mRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteColor" />

</LinearLayout>

</ScrollView>
    </LinearLayout>