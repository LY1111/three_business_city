<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_cardName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="农业银行"
        android:layout_marginTop="@dimen/common10dp"
        android:layout_marginLeft="@dimen/common10dp"
        android:textSize="@dimen/sp_14"/>

    <TextView
        android:id="@+id/tv_bankcard"
        android:layout_below="@id/tv_cardName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common10dp"
        android:textSize="@dimen/sp_16"
        android:text="6228480286927636469"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="储蓄卡"
        android:textSize="@dimen/sp_12"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_alignBottom="@id/tv_cardName"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray1"
        android:layout_below="@id/tv_bankcard"/>

</RelativeLayout>