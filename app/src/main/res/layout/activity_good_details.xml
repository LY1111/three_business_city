<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.tuoyi.threebusinesscity.activity.onLineShop.GoodDetailsActivity">

    <RelativeLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common50dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商品详情"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/text_size_18sp" />

        <ImageButton
            android:id="@+id/leftBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="@dimen/common10dp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/mBanner"
                android:layout_width="match_parent"
                android:layout_height="250dp"/>

            <!--<ImageView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="170dp"-->
                <!--android:scaleType="fitXY"-->
                <!--android:src="@drawable/text_pic" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteColor">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/common10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/mPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/common5dp"
                        android:text="¥ 199"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_16sp" />

                    <TextView
                        android:id="@+id/mName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/common5dp"
                        android:text="2017春季新款美鞋"
                        android:textColor="@color/blackColor" />

                </LinearLayout>

                <TextView
                    android:id="@+id/mCollect"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common10dp"
                    android:drawableTop="@drawable/selector_collection"
                    android:padding="@dimen/common5dp"
                    android:layout_gravity="center"
                    android:text="收藏"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common8dp"
                android:background="@color/whiteColor">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common8dp"
                    android:layout_marginLeft="@dimen/common10dp"
                    android:layout_marginTop="@dimen/common8dp"
                    android:padding="@dimen/common5dp"
                    android:text="购买数量"
                    android:textColor="@color/blackColor" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="库存：100"
                        android:textColor="@color/blackColor" />

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:background="@color/grayColor">

                        <TextView
                            android:id="@+id/iv_sub"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:background="@color/whiteColor"
                            android:gravity="center"
                            android:text=" - "
                            android:textColor="@color/blackColor" />

                        <TextView
                            android:id="@+id/mNumber"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:background="@color/whiteColor"
                            android:gravity="center"
                            android:text="1" />

                        <TextView
                            android:id="@+id/iv_add"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:background="@color/whiteColor"
                            android:gravity="center"
                            android:text=" + " />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_marginTop="@dimen/common4dp"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common8dp"
                    android:layout_marginLeft="@dimen/common10dp"
                    android:layout_marginTop="@dimen/common8dp"
                    android:padding="@dimen/common5dp"
                    android:text="规格"
                    android:textColor="@color/blackColor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common8dp"
                    android:layout_marginLeft="@dimen/common10dp"
                    android:layout_marginTop="@dimen/common8dp"
                    android:padding="@dimen/common5dp"
                    android:text="选择 颜色 分类 样式..."
                    android:textColor="@color/blackColor"/>
            </LinearLayout>

            <RadioGroup
                android:id="@+id/mRg"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/whiteColor"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/common8dp">

                <RadioButton
                    android:id="@+id/mOne"
                    android:layout_width="@dimen/common0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="图文详情"
                    android:textColor="@color/selector_black_theme" />
<!--
                <RadioButton
                    android:id="@+id/mTwo"
                    android:layout_width="@dimen/common0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="商品参数"
                    android:textColor="@color/selector_black_theme" />

                <RadioButton
                    android:id="@+id/mThree"
                    android:layout_width="@dimen/common0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="商品评价"
                    android:textColor="@color/selector_black_theme" />-->


            </RadioGroup>

           <!-- <FrameLayout
                android:id="@+id/mFrame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />-->
            <WebView
                android:id="@+id/wv_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </WebView>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Details_mCar"
            android:layout_width="@dimen/common0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/cart" />

        <TextView
            android:id="@+id/mAddCar"
            android:layout_width="@dimen/common0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/themeColor"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="@color/whiteColor" />

        <TextView
            android:id="@+id/mBuy"
            android:visibility="gone"
            android:layout_width="@dimen/common0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@color/whiteColor" />

    </LinearLayout>

</LinearLayout>
