<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common50dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/wechat_pay"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"/>

    <TextView
        android:id="@+id/tv_pay_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信支付"
        android:layout_toRightOf="@id/img_pay"
        android:textSize="@dimen/sp_16"
        android:layout_centerVertical="true"
        android:textColor="@color/background_content"
        android:layout_marginLeft="@dimen/dp_10"/>

    <ImageView
        android:id="@+id/img_checked"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:padding="@dimen/dp_10"
        android:src="@mipmap/unchecked"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_centerVertical="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"/>

</RelativeLayout>