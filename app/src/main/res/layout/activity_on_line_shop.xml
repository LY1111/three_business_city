<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tuoyi.threebusinesscity.activity.onLineShop.OnLineShopActivity">

    <FrameLayout
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tab_bottom"
        android:layout_alignParentStart="true"/>

    <RadioGroup
        android:id="@+id/tab_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingTop="@dimen/common5dp">

        <RadioButton
            android:id="@+id/mMain"
            style="@style/radioBtn"
            android:checked="true"
            android:drawableTop="@drawable/select_main_menu_a"
            android:text="首页" />

        <RadioButton
            android:id="@+id/mSort"
            style="@style/radioBtn"
            android:drawableTop="@drawable/selector_sort"
            android:text="分类" />

        <RadioButton
            android:id="@+id/mCar"
            style="@style/radioBtn"
            android:drawableTop="@drawable/selector_shop_car"
            android:text="购物车" />

        <RadioButton
            android:id="@+id/mMine"
            style="@style/radioBtn"
            android:drawableTop="@drawable/select_main_menu_d"
            android:text="我的" />

    </RadioGroup>
</RelativeLayout>
