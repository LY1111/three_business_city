<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/grayColor"
    android:orientation="vertical">

    <LinearLayout
        android:elevation="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/whiteColor"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/item_main_bottom_shop_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:padding="16dp"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_main_grid_menu_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:gravity="center|left"
                    android:paddingBottom="2dp"
                    android:paddingTop="4dp"
                    android:text="店铺名"
                    android:textColor="@color/blackColor"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_launcher_round"
                    android:tint="@color/lightGreyColor" />

                <TextView
                    android:id="@+id/item_main_grid_menu_distance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:gravity="center|left"
                    android:text="距离：100m"
                    android:textColor="@color/lightGreyColor"
                    android:textSize="12sp" />
            </LinearLayout>

            <RatingBar
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:numStars="5"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="2dp"
                android:rating="2" />

            <TextView
                android:id="@+id/item_main_grid_menu_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:gravity="center_vertical|left"
                android:maxLines="1"
                android:paddingBottom="2dp"
                android:paddingTop="4dp"
                android:text="春节期间全部商品8折出售"
                android:textColor="@color/lightGreyColor"
                android:textSize="12sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingTop="2dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_launcher_round"
                    android:tint="@color/lightGreyColor" />

                <TextView
                    android:id="@+id/item_main_grid_menu_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical|left"
                    android:maxLines="1"
                    android:text="济南市历下区明湖广场777号3单元10号楼1009室"
                    android:textColor="@color/blackColor"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:background="@color/grayColor"
        android:layout_width="wrap_content"
        android:layout_height="0.66dp"/>

</LinearLayout>