<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="@dimen/common0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_integral_consumptionRecords_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/common10dp"
                android:text="肯德基北苑店"
                android:textColor="@color/blackColor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_integral_consumptionRecords_tv_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common10dp"
                android:paddingRight="@dimen/common10dp"
                android:text="【A类用户】"
                android:textColor="@color/darkColor"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/item_integral_consumptionRecords_tv_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/common10dp"
                android:text="消费金额：￥666.00"
                android:textColor="@color/darkColor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/common0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="right"
            android:orientation="vertical">

            <LinearLayout
                android:paddingRight="@dimen/common10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_integral_consumptionRecords_tv_integral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:paddingBottom="@dimen/common10dp"
                    android:paddingTop="@dimen/common10dp"
                    android:text="+66"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:textSize="12sp"
                    android:paddingLeft="@dimen/common2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:paddingBottom="@dimen/common10dp"
                    android:paddingTop="@dimen/common10dp"
                    android:text="三商豆"
                    android:textColor="@color/blackColor" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_integral_consumptionRecords_tv_time"
                android:gravity="center_vertical|bottom"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="@dimen/common0dp"
                android:padding="@dimen/common10dp"
                android:text="2018.01.01 15:11:25"
                android:textColor="@color/darkColor" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:background="@color/grayColor"
        android:layout_width="wrap_content"
        android:layout_height="0.66dp"/>
</LinearLayout>