<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--灰色小字-->
    <style name="grayTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/darkColor</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>
    <!--主题色小字-->
    <style name="primaryTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>
    <!--Login布局-->
    <style name="loginLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/common10dp</item>
        <item name="android:paddingRight">@dimen/common10dp</item>
        <item name="android:background">@drawable/shape_login_bg_edittext</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <!--输入框-->
    <style name="editTextStyle">
        <item name="android:textColor">@color/blackColor</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/common10dp</item>
        <item name="android:paddingTop">@dimen/common15dp</item>
        <item name="android:paddingBottom">@dimen/common15dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:textColorHint">@color/darkColor</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:minLines">1</item>
        <item name="android:background">@color/whiteColor</item>
        <item name="android:drawablePadding">@dimen/common8dp</item>
    </style>

    <!--按钮-->
    <style name="loginButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/common10dp</item>
        <item name="android:layout_marginRight">@dimen/common10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:background">@drawable/selector_login_bg_button</item>
    </style>

    <style name="gray_text12">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/darkColor</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="black_text14">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blackColor</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:background">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
    </style>

    <style name="black_text16">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blackColor</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:background">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
    </style>

    <style name="gray_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common1dp</item>
        <item name="android:background">@color/grayColor</item>
    </style>

    <style name="radioBtn">
        <item name="android:layout_width">@dimen/common0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/selector_bottom_textview</item>
        <item name="android:drawablePadding">@dimen/common3dp</item>
    </style>

    <!--忘记密码底部对话框-->
    <style name="BottomDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <!--忘记密码底部对话框动画-->
    <style name="BottomDialog.Animation" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/tranlate_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/tranlate_dialog_on</item>
    </style>

    <style name="CustomTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabTextColor">@color/custom_progress_background</item>
        <item name="tabSelectedTextColor">@color/custom_progress_orange_progress</item>
        <item name="tabIndicatorHeight">0dp</item>

        <!--
            1.tabIndicatorColor：TabLayout指示器的颜色
            2.tabTextColor: tab默认字体的颜色
            3.tabSelectedTextColor：当前选择的tab的字体颜色
            4.tabBackground：背景
            5.tabIndicatorHeight：TabLayout指示器高度
        -->
    </style>
</resources>
